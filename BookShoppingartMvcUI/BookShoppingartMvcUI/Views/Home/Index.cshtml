@{
    ViewData["Title"] = "Home Page";

    var books = ViewBag.Books as List<BookShoppingartMvcUI.Models.Book> ?? new List<BookShoppingartMvcUI.Models.Book>();
    var genres = ViewBag.Genres as List<BookShoppingartMvcUI.Models.Genre> ?? new List<BookShoppingartMvcUI.Models.Genre>();
    var sterm = ViewBag.STerm as string ?? "";
    var genreId = ViewBag.GenreId as int? ?? 0;
}

<div class="my-2">
    <form asp-action="Index" method="get" class="row row-cols-lg-auto g-3 align-items-center">
        <div class="col-12">
            <label class="visually-hidden" for="genreId">Genre</label>
            <select class="form-select" id="genreId" name="genreId">
                <option value="0">Choose...</option>
                @foreach (var genre in genres)
                {
                    <option value="@genre.Id" selected="@(genre.Id == genreId)">@genre.GenreName</option>
                }
            </select>
        </div>
        <div class="col-12">
            <label class="visually-hidden" for="sterm">Search By title</label>
            <div class="input-group">
                <div class="input-group-text"></div>
                <input type="text" name="sterm" class="form-control" value="@sterm" id="sterm" placeholder="Search by title">
            </div>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
</div>

<div class="w-100 mt-4 d-flex flex-wrap">
    @if (!books.Any())
    {
        <div class="alert alert-info w-100 text-center">
            <h4>কোনো বই পাওয়া যায়নি!</h4>
            <p>সার্চ বা জেনার চেঞ্জ করে দেখুন।</p>
        </div>
    }
    else
    {
        @foreach (var book in books)
        {
            <div class="card mx-2 mb-4" style="width: 16rem;">
                @if (string.IsNullOrEmpty(book.Image))
                {
                    <img src="https://picsum.photos/200/300" class="card-img-top" alt="@book.BookName">
                }
                else
                {
                    <img src="~/images/@book.Image" class="card-img-top" alt="@book.BookName">
                }
                <div class="card-body">
                    <h5 class="card-title">@book.BookName</h5>
                    <p class="card-text">
                        Genre: @book.Genre.GenreName <br />
                        Author: @book.AuthorName <br />
                        Price: ৳ @book.Price
                    </p>
                    <button type="button" onclick="add(@book.Id)" class="btn btn-primary">Add to cart</button>
                </div>
            </div>
        }
    }
</div>