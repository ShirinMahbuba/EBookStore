@{
    ViewData["Title"] = "Home Page";

    var books = ViewBag.Books as List<BookShoppingartMvcUI.Models.Book> ?? new List<BookShoppingartMvcUI.Models.Book>();
    var genres = ViewBag.Genres as List<BookShoppingartMvcUI.Models.Genre> ?? new List<BookShoppingartMvcUI.Models.Genre>();
    var sterm = ViewBag.STerm as string ?? "";
    var genreId = ViewBag.GenreId as int? ?? 0;
}

<div class="container my-5">
    <h1 class="text-center mb-5 fw-bold text-primary">Welcome to EBookStore</h1>

    <!-- Search & Filter Form -->
    <div class="my-4">
        <form asp-action="Index" method="get" class="row row-cols-lg-auto g-3 align-items-center justify-content-center">
            <div class="col-12 col-md-4">
                <select name="genreId" class="form-select">
                    <option value="0">All Genres</option>
                    @foreach (var genre in genres)
                    {
                        <option value="@genre.Id" selected="@(genre.Id == genreId)">@genre.GenreName</option>
                    }
                </select>
            </div>

            <div class="col-12 col-md-4">
                <div class="input-group">
                    <input type="text" name="sterm" class="form-control" value="@sterm" placeholder="Search by title or author" />
                </div>
            </div>

            <div class="col-12 col-md-2">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>

            <div class="col-12 col-md-2">
                <a asp-action="Index" class="btn btn-secondary w-100">Reset</a>
            </div>
        </form>
    </div>

    <!-- Books Grid -->
    @if (!books.Any())
    {
        <div class="alert alert-info text-center">
            <h4>No books found.</h4>
            <p>Try changing the search or genre filter.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var book in books)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(book.Image))
                        {
                            <img src="~/images/@book.Image" class="card-img-top" style="height:300px; object-fit:cover;" alt="@book.BookName" />
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height:300px;">
                                <h5 class="text-muted">No Image</h5>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@book.BookName</h5>
                            <p class="card-text text-muted">Author: @book.AuthorName</p>
                            <p class="card-text">Genre: @book.Genre.GenreName</p>
                            <p class="card-text fs-4 fw-bold text-primary">৳ @book.Price</p>

                            <div class="mt-auto">
                                <button type="button" onclick="add(@book.Id)" class="btn btn-success w-100">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
